<Window x:Class="SubModelSeqInSubModelOpt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:SubModelSeqInSubModelOpt">
  <StackPanel>
    <Menu>
      <MenuItem Header="SubModels" >
        <MenuItem Header="UsersSubModel" Command="{Binding ShowUsers}"/>
      </MenuItem>
    </Menu>
    <Grid DataContext="{Binding UserModel}">
      <DataGrid Height="350"
            Margin="16" AutoGenerateColumns="False" IsReadOnly="True"
            HorizontalAlignment="Stretch" ScrollViewer.CanContentScroll="True"
            SelectedItem="{Binding SelectedUser}"
            ItemsSource="{Binding Users, IsAsync=True}">
        <DataGrid.Columns>
          <DataGridTextColumn Binding="{Binding Id}" Header="Id"/>
          <DataGridTextColumn Binding="{Binding FullName}" Header="FullName"/>
        </DataGrid.Columns>
      </DataGrid>
    </Grid>
  </StackPanel>
</Window>
