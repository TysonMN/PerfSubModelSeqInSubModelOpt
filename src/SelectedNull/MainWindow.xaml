<Window x:Class="SubModelSeqInSubModelOpt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <StackPanel>
    <Menu>
      <MenuItem Header="SubModels" >
        <MenuItem Header="UsersSubModel" Command="{Binding ShowUsers}"/>
      </MenuItem>
    </Menu>
    <Grid DataContext="{Binding UserModel}">
      <DataGrid AutoGenerateColumns="False"
                IsReadOnly="True"
                SelectedItem="{Binding SelectedUser}"
                ItemsSource="{Binding Users, IsAsync=True}">
        <DataGrid.Columns>
          <DataGridTextColumn Binding="{Binding Id}" Header="Id"/>
          <DataGridTextColumn Binding="{Binding FullName}" Header="FullName"/>
        </DataGrid.Columns>
      </DataGrid>
    </Grid>
  </StackPanel>
</Window>